#!/bin/bash 

source cluster.conf
source util-common

INIT_CMD="docker run --rm"
[[ ! -z "$NETWORK_NAME" ]] && INIT_CMD+=" --network $NETWORK_NAME"
INIT_CMD+=" --env BROKER__ZOOKEEPER_SERVERS=$BROKER__ZOOKEEPER_SERVERS 
	--env BROKER__CONFIGURATION_STORE_SERVERS=$BROKER__CONFIGURATION_STORE_SERVERS 
	--env BROKER__BOOKKEEPER_METADATA_SERVICE_URI=$BROKER__BOOKKEEPER_METADATA_SERVICE_URI 
	$IMAGE initCluster $CLUSTER_NAME $PULSAR_HOSTNAME"

$INIT_CMD

#::END:: 
