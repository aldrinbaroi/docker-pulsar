    STANDALONE__MANAGED_LEDGER_TRACE_TASK_EXECUTION=true \
    STANDALONE__LOAD_MANAGER_CLASS_NAME=org.apache.pulsar.broker.loadbalance.NoopLoadManager \
    STANDALONE__LOAD_BALANCER_ENABLED=false \
    STANDALONE__LOAD_BALANCER_REPORT_UPDATE_THRESHOLD_PERCENTAGE=10 \
    STANDALONE__LOAD_BALANCER_REPORT_UPDATE_MAX_INTERVAL_MINUTES=15 \
    STANDALONE__LOAD_BALANCER_HOST_USAGE_CHECK_INTERVAL_MINUTES=1 \
    STANDALONE__LOAD_BALANCER_SHEDDING_INTERVAL_MINUTES=1 \
    STANDALONE__LOAD_BALANCER_SHEDDING_GRACE_PERIOD_MINUTES=30 \
    STANDALONE__LOAD_BALANCER_BROKER_MAX_TOPICS=50000 \
    STANDALONE__LOAD_BALANCER_RESOURCE_QUOTA_UPDATE_INTERVAL_MINUTES=15 \
    STANDALONE__LOAD_BALANCER_AUTO_BUNDLE_SPLIT_ENABLED=true \
    STANDALONE__LOAD_BALANCER_AUTO_UNLOAD_SPLIT_BUNDLES_ENABLED=true \
    STANDALONE__LOAD_BALANCER_NAMESPACE_BUNDLE_MAX_TOPICS=1000 \
    STANDALONE__LOAD_BALANCER_NAMESPACE_BUNDLE_MAX_SESSIONS=1000 \
    STANDALONE__LOAD_BALANCER_NAMESPACE_BUNDLE_MAX_MSG_RATE=30000 \
    STANDALONE__LOAD_BALANCER_NAMESPACE_BUNDLE_MAX_BANDWIDTH_MBYTES=100 \
    STANDALONE__LOAD_BALANCER_NAMESPACE_MAXIMUM_BUNDLES=128 \
    STANDALONE__LOAD_BALANCER_BROKER_THRESHOLD_SHEDDER_PERCENTAGE=10 \
    STANDALONE__LOAD_BALANCER_HISTORY_RESOURCE_PERCENTAGE=0.9 \
    STANDALONE__LOAD_BALANCER_BANDWITH_IN_RESOURCE_WEIGHT=1.0 \
    STANDALONE__LOAD_BALANCER_BANDWITH_OUT_RESOURCE_WEIGHT=1.0 \
    STANDALONE__LOAD_BALANCER_CPURESOURCE_WEIGHT=1.0 \
