    STANDALONE__DEFAULT_RETENTION_TIME_IN_MINUTES=0 \
    STANDALONE__DEFAULT_RETENTION_SIZE_IN_MB=0 \
    STANDALONE__KEEP_ALIVE_INTERVAL_SECONDS=30 \
    STANDALONE__WEB_SOCKET_SERVICE_ENABLED=true \
    STANDALONE__WEB_SOCKET_NUM_IO_THREADS=8 \
    STANDALONE__WEB_SOCKET_CONNECTIONS_PER_BROKER=8 \
    STANDALONE__WEB_SOCKET_SESSION_IDLE_TIMEOUT_MILLIS=300000 \
    STANDALONE__WEB_SOCKET_MAX_TEXT_FRAME_SIZE=1048576 \
    STANDALONE__EXPOSE_TOPIC_LEVEL_METRICS_IN_PROMETHEUS=true \
    STANDALONE__EXPOSE_PUBLISHER_STATS=true \
    STANDALONE__EXPOSE_PRECISE_BACKLOG_IN_PROMETHEUS=false \
    STANDALONE__GLOBAL_ZOOKEEPER_SERVERS= \
    STANDALONE__BROKER_SERVICE_PURGE_INACTIVE_FREQUENCY_IN_SECONDS=60 \
    STANDALONE__LEDGER_STORAGE_CLASS=org.apache.bookkeeper.bookie.storage.ldb.DbLedgerStorage \
    STANDALONE__DB_STORAGE_WRITE_CACHE_MAX_SIZE_MB= \
    STANDALONE__DB_STORAGE_READ_AHEAD_CACHE_MAX_SIZE_MB= \
    STANDALONE__DB_STORAGE_READ_AHEAD_CACHE_BATCH_SIZE=1000 \
    STANDALONE__FLUSH_INTERVAL=60000 \
